#!/usr/bin/env ruby
require './lib/dat'
include Dat

d = Dict.new
loop do
begin
  b = SimpleBot.new
  g = Game.new(Logger.new(:null => true)[0], :players => ['p1', b], :dict => d)
  b.init(g)
    m = b.move
  while m.size < 15 do # rough measure to check we're always iterating on words
    m = g.play('p1', g.logic.perturb(m.strip, g.used)[0].to_s)
  end
rescue InvalidMove => e
  puts "#{e.message} =, player (#{g.whos_turn}), m: (#{m}), game: (#{g}), last (#{g.last})"
end
end
